@{
    ViewData["Title"] = "Upload Payroll Excel";
}

<h2>Upload Payroll Excel</h2>

<form asp-controller="Payroll" asp-action="UploadFile" method="post" enctype="multipart/form-data" target="_blank">
    <div>
        <label>Excel File:</label>
        <input type="file" name="file" required/>
    </div>
    <fieldset> 
        <legend>Select State (required):</legend> 
        <label><input type="radio" name="state" value="Pohnpei" required /> Pohnpei</label> 
        <label><input type="radio" name="state" value="Chuuk" /> Chuuk</label> 
        <label><input type="radio" name="state" value="Yap" /> Yap</label> 
        <label><input type="radio" name="state" value="Kosrae" /> Kosrae</label> 
    </fieldset>
    <div>
        <label>Start Line:</label>
        <input type="number" name="startLine" value="1" />
    </div>
    <div>
        <label>Left Margin (px):</label>
        <input type="number" name="marginLeft" value="40" />
    </div>
    <div>
        <label>Top Margin (px):</label>
        <input type="number" name="marginTop" value="60" />
    </div>
    <div>
        <label>Line Height (px):</label>
        <input type="number" name="lineHeight" value="14" />
    </div>
    <button type="submit">Preview PDF</button>
</form>
